<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LIST APP</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST APP</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>タスクリスト</h1>
        <div class="buttuns">
          <a href="/new" class="new-button">+ 新規登録</a>
          <a href="/completed" class="completed-button">達成済み一覧へ</a> 
        </div>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="name-column">未達成タスク一覧</span>
        </div>
        <ul class="table-body">
          <% items.forEach((item) => { %>
            <li>
              <div class="item-data">
                <span class="name-column"><%= item.name %></span>
              </div>
              <div class="item-menu">
                <form action="/delete/<%= item.id %>" method="post">
                  <input type="submit" value="削除">
                </form>
                <a href="/edit/<%= item.id %>">編集</a>
                <form action="/complete/<%= item.id %>" method="post">
                  <input type="submit" value="達成">
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>